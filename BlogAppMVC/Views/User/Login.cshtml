@model LoginViewModel

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow rounded-4">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Giriş Yap</h3>

                <form method="post" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control rounded-3" placeholder="E-posta adresinizi girin">
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold"></label>
                        <input asp-for="Password" class="form-control rounded-3" placeholder="Şifrenizi girin" type="password">
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold">Giriş Yap</button>
                    </div>

                    <div class="mt-3 text-center">
                        <small>Hesabınız yok mu? <a href="/user/register" class="text-decoration-none">Kayıt olun</a></small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
